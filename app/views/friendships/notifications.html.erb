<div class="row">
  <div class="col-md-4 col-sm-6">
    <h1>Notifications</h1>
    <% pending = pending_friendship(current_user)%>
    <% unless pending.empty?%>
      <% pending.each do |user| %>
        <div class="user-block">
          <span class="pr-10"><%= gravatar_for user, size: 100 %></span>
          <ul>
            <li><h4>
              <%= user.first_name %>
              <%= user.last_name %>
            </h4></li>
            <li><h5><%= user.email %></h5></li>
            <li>
              <%= link_to "Profile", user_path(user.id) %> | 
              <%= link_to 'Accept', edit_friendship_path(get_friendship(user).id) %> |
              <%= link_to 'Reject', edit_friendship_path(get_friendship(user).id) %>
            </li>
          </ul>
        </div>
      <% end %>
    <% end%>
  </div>
</div>
